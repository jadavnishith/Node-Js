<!DOCTYPE html>
<html>
<head>
  <title>Tasks</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <%- include('partials/navbar') %>
  <div class="container mx-auto mt-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl">My Tasks</h2>
      <a href="/tasks/new" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
        New Task
      </a>
    </div>
    <div class="grid gap-4">
      <% tasks.forEach(task => { %>
        <div class="bg-white p-4 rounded-lg shadow">
          <h3 class="text-xl mb-2"><%= task.title %></h3>
          <p class="text-gray-600"><%= task.description %></p>
          <div class="mt-4 flex justify-between items-center">
            <span class="text-sm text-gray-500">
              Due: <%= task.dueDate ? new Date(task.dueDate).toLocaleDateString() : 'No due date' %>
            </span>
            <div>
              <a href="/tasks/<%= task._id %>/edit" class="text-blue-500 mr-2">Edit</a>
              <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST" class="inline">
                <button type="submit" class="text-red-500">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
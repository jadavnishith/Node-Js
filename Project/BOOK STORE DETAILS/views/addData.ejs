<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f9f9f9;
            color: #333;
        }

        form {
            margin-bottom: 20px;
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 40%;
            border-collapse: collapse;
            margin: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        form table td {
            padding: 10px;
            vertical-align: middle;
        }

        form input[type="text"],
        form select {
            width: 100%;
            padding: 8px;
            margin: 5px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        form input[type="radio"] {
            margin-right: 5px;
        }

        form button {
            background-color: #28a745;
            color: #ffffff;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            border-radius: 4px;
            font-size: 16px;
        }

        form button:hover {
            background-color: #218838;
        }

        table.outputData {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        table.outputData th,
        table.outputData td {
            text-align: left;
            padding: 10px;
            border: 1px solid #ddd;
        }

        table.outputData th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        table.outputData tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table.outputData tr:hover {
            background-color: #e9ecef;
        }

        table.outputData a button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 12px;
            cursor: pointer;
            border-radius: 4px;
            font-size: 14px;
        }

        table.outputData a button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <form action="/insertAddData" method="post">
        <fieldset>
            <legend>Book Store</legend>
            <table>
                <tr>
                    <td><label for="">Book Name :</label></td>
                    <td> <input type="text" placeholder="Enter Book Name " name="bookname"></td>
                </tr>
                <tr>
                    <td> <label for="">Price :</label></td>
                    <td><input type="text" placeholder="Enter Book Price " name="price"></td>
                </tr>
                <tr>
                    <td><label for="">Section : </label></td>
                    <td>
                        <input type="radio" name="section" value="A" />A
                        <input type="radio" name="section" value="B" />B
                    </td>
                </tr>
                <tr>
                    <td>Category :</td>
                    <td>
                        <select name="Category" id="">
                            <option value="">Select Category</option>
                            <option value="Science fiction">Science fiction</option>
                            <option value="Adventure fiction">Adventure fiction</option>
                            <option value="Autobiography">Autobiography</option>
                            <option value="Mystery">Mystery</option>
                            <option value="Thriller">Thriller</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <button type="submit">ADD Data</button>
                    </td>
                </tr>
            </table>



        </fieldset>
    </form>

    <table class="outputData" border="" cellpadding="6">

        <tr>
            <td>Book Name</td>
            <td>Price</td>
            <td>Section</td>
            <td>Category</td>
            <td>Action</td>
        </tr>

        <% userData.map((data)=>{ %>

            <tr>
                <td>
                    <%= data.bookname %>
                </td>
                <td>
                    <%= data.price %>
                </td>
                <td>
                    <%= data.section %>
                </td>
                <td>
                    <%= data.Category %>
                </td>
                <td>
                    <a href="/deleteData/<%= data.id %>"> <button>Delete</button></a>
                    <a href="/editData/<%= data.id %>"> <button>Edit</button></a>
                </td>
            </tr>
            <% }) %>
    </table>
</body>

</html>